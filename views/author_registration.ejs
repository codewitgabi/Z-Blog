<div class="container">
  <div class="center">
    <img alt="author-image" id="author-image-display">
  </div>
  <h2>Become an author</h2>
  <p id="agreement">By checking the checkbox below, you agree to become an Author.</p>
  <form action="" method="post" id="author-register-form" enctype="multipart/form-data">
    <div class="form-flex">
      <input type="checkbox" name="agree" id="agree" required="">
      <span>I agree</span>
    </div>
     <%# <input type="file" name="image" id="image" required> %>
     <div class="input_container">
      <label for="files" class="btn">Browse Files</label>
      <input id="files" name="image" required style="display:none;" type="file">
    </div>
    <button class="btn-full">Continue</button>
  </form>
</div>
