<header>
  <nav>
    <a href="/">Z-Blog</a>
    <div class="nav-mobile-right">
      <i class="bi bi-search search mobile-only"></i>
      <i class="bi bi-list mobile-only" id="openMenu"></i>
    </div>
    <div class="auth-links" id="auth-links">
      <i class="bi bi-x mobile-only" id="closeMenu"></i>
